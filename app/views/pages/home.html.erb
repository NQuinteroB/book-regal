<div class="container text-center ">
  <div data-aos="zoom-out-up">
    <h1>Welcome <%= current_user.first_name %></h1>
  </div>
</div>
<div class="container text-center ">
      <div data-aos="zoom-in-right">
        <h2>Your rented books</h2>
      </div>
      </div>
  <div data-aos="fade-up"
     data-aos-easing="linear"
     data-aos-duration="1500">
      <div class="row ">
        <div class="col  d-flex justify-content-around ">
          <% @books1.each do |book| %>
            <div class="book-card">
              <div class="card mb-2">
              <% if book.photo.attached? %>
                <%= cl_image_tag book.photo.key, height: 200, width: 150, crop: :fill %>

                  <p><%= link_to "Read more", book_path(book)%></p>

              <% else %>
                <%= book.title %>
              <% end %>
              </div>
            </div>
          <%end%>
        </div>
    </div>
  <div data-aos="zoom-out">
        <div class="mt-2">
          <h2 class = "text-center">Recommended Books</h2>
          <div class="col  d-flex justify-content-around mb-4">
            <% @books2.each do |book| %>
            <div class="book-card">
              <div class="card mb-2">
                <% if book.photo.attached? %>
                  <%= cl_image_tag book.photo.key, height: 200, width: 150, crop: :fill %>
                  <p><%= link_to "Read more", book_path(book)%></p>
                <% else %>
                  <%= book.title %>
                <% end %>
                </div>
              </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>

 </div>
