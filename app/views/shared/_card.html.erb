            <div class="book-card">
              <div class="book-card-info w-100 h-100 pt-3 d-flex flex-column">
                  <% if book.photo.attached? %>
                    <%= cl_image_tag book.photo.key, crop: :fill %>
                  <% else %>
                    <%= book.title %>
                  <% end %>

                <div class="h-100 d-flex align-items-center my-auto justify-content-center">
                  <p class="text-center m-0 py-3">
                  <%= link_to "Read more", book_path(book), {:style=>'color:black; text-decoration: none;'}%>
                  </p>
                </div>
              </div>
            </div>
