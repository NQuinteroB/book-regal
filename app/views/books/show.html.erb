<div class="container">
  <h1 style="line-height: 2em;">Books details</h1>

  <div>
    <div class="book-card1 d-flex justify-content-left">
      <div class="book-image my-3 mx-3">
        <%= cl_image_tag @book.photo.key, height: 400, width: 300, crop: :fill, style: "border-radius: 15px" %>
      </div>

      <div class="d-flex row">
        <div class="book-details my-3 mx-3">
          <h4>Title</h4>
          <h4><%= @book.title %></h4>
          <h5>Book category:</h5>
          <%= @book.book_category %>
        </div>

        <div class="mx-3">
          <%= link_to "Rent this book", new_book_booking_path(@book), class: "btn btn-success"%>
          <%= link_to "Add a review", new_book_review_path(@book), class: "btn btn-success"%>
        </div>
      </div>

    </div>
  </div>
</div>







<div class="reviews-container border border-top-0 mt-4 bg-white rounded p-3 shadow">
  <div class="bg-white rounded p-3 shadow border border-5 ">
    <h3>Reviews</h3>
    <% if @reviews.length == 0 %>
      <hr>
      <h5 style="color: red"> There are not reviews yet !!</h5>
    <% end %>
    <hr>
    <% @reviews.order(created_at: :desc).each do |review| %>
      <p style="font-size: 20px; font-weight: light;"><%= review.content %></p>
      <% if review.user_id == current_user.id%>
        <div class="btn btn-danger ">
          <%= link_to "Delete", review_path(review),{:style=>'color:white; text-decoration: none;'}%>
        </div>
      <% end %>
        <hr>
    <% end %>
  </div>
</div>
