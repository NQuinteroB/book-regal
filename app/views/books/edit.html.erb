<h1>Edit the book</h1>
<%= simple_form_for [@book] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title,
                required: true,
                autofocus: true,
                input_html: { autocomplete: @book.title } %>
  <%= f.input :book_category,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: @book.book_category } %>
  <%= f.input :language,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: @book.language } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Edit" class:'btn btn-secondary' %>
  </div>
<% end %>
