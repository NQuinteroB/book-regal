<div class="search-bar-container mt-3">
  <%= form_with url: books_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a book"
    %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
</div>

<div class="text-center font-weight-bold">
   <h1 class="hello">All BooksðŸ‘‡</h1>
</div>

<div class="container">
  <div class="books-conatiner d-flex flex-md-column">
      <ul style="list-style-type: none">
          <div class="books-container">
            <% @books.each do |book| %>
            <div class="book-card">
              <div class="book-card-info d-flex flex-column">
                <div class="p-2">
                  <li style="display: inline;">
                  <% if book.photo.attached? %>
                    <%= cl_image_tag book.photo.key, height: 200, width: 150, crop: :fill %>
                  <% else %>
                    <%= book.title %>
                  <% end %>
                  </li>
                </div>
                <div class="p-2">
                  <p><%= link_to book.title, book_path(book)%></p>
                </div>
              </div>
            </div>
            <%end%>
          </div>
      </ul>
  </div>
  <div class="map-container mt-2" data-controller="map"
       data-map-markers-value="<%= @markers.to_json %>"
       data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
